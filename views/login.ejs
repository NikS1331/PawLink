<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
    content="widt=device-width,
    initial-scale=1.0">
    <title>Pet Sitting Login</title>
    <style>
        body{
            font-family:Arial,sans-serif;
            background:linear-gradient(to bottom
            right,#81e6d9,#34d399);
            display:flex;
            justify-content: center;
            align-items:center;
            height:100vh;
            margin:0;
        }
        .login-card{
            background:white;
            padding:2rem;
            border-radius:1rem;

            box-shadow: 0 4px 15px
        rgba(0,0,0,0.2);   
        width: 300px;
        text-align:center; 
        }
        input{
            width: 90%;
            padding:0.5rem;
            margin:0.5rem 0;
            border-radius: 0.5rem;
            border:1px solid#ccc;
        }
        button{
            width:95%;
            padding:0.5rem;
            margin:0.5rem 0;
            border:none;
            border-radius: 0.5rem;
            cursor:pointer;
            font-weight:bold;
        }
        .owner-btn{ background: color #14b8a6;
        color:white;}
        .owner-btn:hover {background: color #0d9488;}
        .sitter-btn {background: color #10b981;
        color:white;}
        .sitter-btn:hover {background-color:#059669;}
    </style>
    </head>
    <html>
        <div class="login-card">
            <h2>Pet Sitting Login</h2>
            <input type="email" id="email" placeholder="Email"><br>
            <input type="password" id="password" placeholder="Password"><br>
                <button class="owner-btn"
            onclick="handleLogin('owner')">Login as Pet Owner</button>
            <button class="sitter-bn"
            onclick="handleLogin('sitter')">Login as 
            Pet Sitter</button>
        </div>
        <script>
            function handleLogin(role){
                const email=
                document.getElementId('email').value;
                const password= 
                document.getElementsById('password').value;

                if(!email||!password){
                    alert('Please enter both email and password.');
                    return;
                }
                if(role==='owner'){
                    alert(`Loggin in as Pet Owner: ${email}`);
                    window.location.href= 
                    '/owner-dashboard.html';
                } else{
                    alert(`Logging in as Pet Sitter: ${email}`);
                    window.location.href= 
                    '/sitter-dashboard.html';
                }
            }
        </script>
        </body>
    </html>